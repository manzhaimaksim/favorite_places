<div class="py-5 text-center container">
  <h2><%= t('users.registration.new_title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label t('users.registration.username') %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.name') %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.sex') %><br />
      <%= f.select :sex, [t('users.registration.male'), t('users.registration.female')] %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.date_of_birth') %><br />
      <%= f.date_field :date_of_birth %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.avatar') %>
      <%= f.file_field :avatar %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.password') %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('users.registration.characters_minimum') %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t('users.registration.new_title') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
