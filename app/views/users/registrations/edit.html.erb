<div class="py-5 text-center container">
  <h2><%= t('users.registration.edit_title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label t('users.registration.username') %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.name') %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.sex') %><br />
      <%= f.select :sex, [t('users.registration.male'), t('users.registration.female')] %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.date_of_birth') %><br />
      <%= f.date_field :date_of_birth %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.avatar') %>
      <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
      <%= f.file_field :avatar %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t('users.registration.confirmable') %> <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label t('users.registration.password') %> <i>(<%= t('users.registration.password_message') %>)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %><%= t('users.registration.characters_minimum') %></em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label t('users.registration.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(<%= t('users.registration.current_password_message') %></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit t('users.registration.update') %>
    </div>
  <% end %>

  <h3><%= t('users.registration.cancel_account') %></h3>

  <p><%= button_to t('users.registration.cancel_account'), registration_path(resource_name), data: { confirm: t('users.registration.cancel_message') }, method: :delete %></p>

  <%= link_to t('users.registration.back'), :back %>
</div>
