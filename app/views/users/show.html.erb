<div class="container">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">
      <div id="map"></div>
    </div>

    <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
      <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
      <b><%= t('users.show.username') %></b>
      <p><%= @user.username %></p>
      <b><%= t('users.show.name') %></b>
      <p><%= @user.name %></p>
      <b><%= t('users.show.sex') %></b>
      <p><%= @user.sex %></p>
      <b><%= t('users.show.date_of_birth') %></b>
      <p><%= @user.date_of_birth %></p>
      <b><%= t('users.show.date_of_registration') %></b>
      <p><%= @user.created_at.to_date %></p>
      <p><%= link_to t('users.show.favorite_places'), favorite_path(@user) %></p>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'map_users_places' %>

<% if @user == current_user %>
  <div class="container">
    <% if @user.places.any? %>
      <h3><%= t('users.show.your_added_places') %></h3>
      <div class="row">
        <%= render partial: 'places/place', collection: @user.places %>
      </div>
    <% else %>
      <p class="buffer-top"><%= t('users.show.not_created') %></p>
    <% end %>
  </div>
<% end %>
