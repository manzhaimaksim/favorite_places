<div class="row">
  <%= form_for(@place) do |f| %>
    <%= render partial: 'form_errors', locals: {model: @place} %>

    <div class="col-12 col-sm-12 col-md-7 col-lg-7 col-xl-7">
      <div id="map"></div>
    </div>

    <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5">
      <div class="form-group">
        <%= f.label t('places.form.title') %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label t('places.form.description') %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label t('places.form.latitude') %>
        <%= f.text_field :latitude, class: 'form-control', id: 'lat', value: '' %>
      </div>
      <div class="form-group">
        <%= f.label t('places.form.longitude') %>
        <%= f.text_field :longitude, class: 'form-control', id: "lng", value: '' %>
      </div>
      <div class="actions">
        <%= f.submit t('places.form.save'), class: 'btn btn-primary' %>
        <%= t('places.form.or') %> <%= link_to t('places.form.return'), :back %>
      </div>
    </div>
  <% end %>
</div>
