<div class="row">
  <%= form_for(@place) do |f| %>
    <%= render partial: 'form_errors', locals: {model: @place} %>

    <div class="col-12 col-sm-12 col-md-7 col-lg-7 col-xl-7">
      <div id="map"></div>
    </div>

    <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :latitude %>
        <%= f.text_field :latitude, class: 'form-control', id: 'lat', value: '' %>
      </div>
      <div class="form-group">
        <%= f.label :longitude %>
        <%= f.text_field :longitude, class: 'form-control', id: "lng", value: '' %>
      </div>
      <div class="actions">
        <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
        или <%= link_to 'вернуться', :back %>
      </div>
    </div>
  <% end %>
</div>
